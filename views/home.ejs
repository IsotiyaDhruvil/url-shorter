                        </div>
                        <div class="col-md-3 d-grid">
                            <button class="btn btn-apple">Shorten Now</button>
                        </div>
                    </form>

                    <% if (typeof id !=='undefined' && id) { %>
                        <div
                            class="mt-4 p-3 animate-slide-up bg-primary bg-opacity-10 rounded-4 border border-primary border-opacity-20 d-flex justify-content-between align-items-center shadow-sm">
                            <div class="text-start overflow-hidden me-2">
                                <small class="text-primary fw-bold text-uppercase d-block"
                                    style="font-size: 0.65rem; letter-spacing: 1px;">
                                    <i class="bi bi-check-circle-fill me-1"></i> Success! Your link is ready
                                </small>
                                <span id="shortUrlText" class="fw-bold fs-6 text-dark d-block text-truncate">
                                    http://url-shorter-4.onrender.com/url/<%= id %>
                                </span>
                            </div>
                            <button type="button" class="btn btn-primary" onclick="copyToClipboard()">
                                Copy
                            </button>
                        </div>
                        <% } %>
                </div>
            </div>
        </div>



        <div class="glass-panel p-2 mb-5 overflow-hidden">
            <div class="p-4 border-bottom d-flex justify-content-between align-items-center bg-white bg-opacity-50">
                <h5 class="fw-800 mb-0 d-flex align-items-center">
                    <i class="bi bi-clock-history me-2 text-primary"></i>
                    Your Link History
                </h5>
                <div class="d-flex align-items-center gap-2">
                    <% if (user && user.role==="ADMIN" ) { %>
                        <form action="/url/delete-all" method="POST"
                            onsubmit="return confirm('⚠️ CRITICAL ACTION: Are you sure you want to delete EVERY link in the database? This cannot be undone.');">
                            <button type="submit"
                                class="btn btn-sm btn-outline-danger rounded-pill px-3 d-flex align-items-center">
                                <i class="bi bi-trash3-fill me-1"></i>
                                <span class="d-none d-md-inline">Delete All</span>
                            </button>
                        </form>
                        <% } %>
