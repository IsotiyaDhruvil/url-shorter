                                            <form action="/url/delete/<%= url._id %>" method="post" class="d-inline">
                                                <button class="btn btn-link text-danger"><i
                                                        class="bi bi-trash3-fill"></i></button>
                                            </form>
                                        </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="row py-5 mt-5 border-top">
            <div class="col-lg-6">
